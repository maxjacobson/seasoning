{
  "include": ["app/**/*", "tailwind.config.ts", "vite.config.mts"],

  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "noEmit": true,
    "outDir": "tmp",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "skipLibCheck": true,
  },
}
