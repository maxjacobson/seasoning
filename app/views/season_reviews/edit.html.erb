<% content_for :title, "Edit review of #{@show.title} — #{@season.name}" %>

<p class="mb-6">
  <%= link_to "← Back to review", proper_review_path(@review) %>
</p>

<% if @review.viewing == 1 %>
  <%= render "form",
      show: @show,
      season: @season,
      review: @review,
      form_url: profile_season_review_path(@review.author.handle, @show.slug, @season.slug),
      submit_text: "Update review" %>
<% else %>
  <%= render "form",
      show: @show,
      season: @season,
      review: @review,
      form_url: profile_season_review_viewing_path(@review.author.handle, @show.slug, @season.slug, @review.viewing),
      submit_text: "Update review" %>
<% end %>
