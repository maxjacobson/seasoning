<% content_for :title, "New review of #{@show.title} — #{@season.name}" %>

<p class="mb-6">
  <%= link_to "← Back to season", season_path(@show.slug, @season.slug) %>
</p>

<%= render "form",
    show: @show,
    season: @season,
    review: @review,
    form_url: season_reviews_path(@show.slug, @season.slug),
    submit_text: "Save review" %>
