<%# locals: (show:, season:, review:, form_url:, submit_text:) %>

<div class="bg-white rounded-lg shadow-md p-6 max-w-2xl mx-auto">
  <div class="flex items-start gap-6 mb-6">
    <div class="flex-shrink-0">
      <%= render "poster", url: season.poster.url, show: show, size: "small" %>
    </div>

    <div class="flex-1">
      <h1 class="text-2xl font-bold text-gray-900 mb-1"><%= show.title %></h1>
      <h2 class="text-lg text-gray-600 mb-3"><%= season.name %></h2>
    </div>
  </div>

  <%= form_with model: review, url: form_url, class: "space-y-6" do |form| %>
    <% if review.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <h3 class="text-red-800 font-medium mb-2">Please fix these errors:</h3>

        <ul class="text-red-700 space-y-1">
          <% review.errors.full_messages.each do |error| %>
            <li>• <%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :rating, "Rating", class: "block text-sm font-medium text-gray-700 mb-2" %>

        <%= form.select :rating,
            options_for_select([
              ["No rating", ""],
              ["⭐ 1 star", 1],
              ["⭐⭐ 2 stars", 2],
              ["⭐⭐⭐ 3 stars", 3],
              ["⭐⭐⭐⭐ 4 stars", 4],
              ["⭐⭐⭐⭐⭐ 5 stars", 5],
              ["⭐⭐⭐⭐⭐⭐ 6 stars", 6],
              ["⭐⭐⭐⭐⭐⭐⭐ 7 stars", 7],
              ["⭐⭐⭐⭐⭐⭐⭐⭐ 8 stars", 8],
              ["⭐⭐⭐⭐⭐⭐⭐⭐⭐ 9 stars", 9],
              ["⭐⭐⭐⭐⭐⭐⭐⭐⭐⭐ 10 stars", 10]
            ], review.rating),
            { include_blank: false },
            { class: "select-field w-full" } %>
      </div>

      <div>
        <%= form.label :visibility, "Visibility", class: "block text-sm font-medium text-gray-700 mb-2" %>

        <%= form.select :visibility,
            options_for_select([
              ["Public - Anyone can see", "viewable_by_anybody"],
              ["Private - Only you can see", "viewable_by_only_me"]
            ], review.visibility),
            { include_blank: false },
            { class: "select-field w-full" } %>
      </div>
    </div>

    <div>
      <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-2" do %>
        Your review
        <span class="text-gray-500 font-normal">(you can use <%= link_to "Markdown", "https://commonmark.org/help/", target: "_blank", rel: "noreferrer" %>)</span>
      <% end %>

      <%= form.text_area :body,
          class: "text-field w-full min-h-[12rem] field-sizing-content",
          placeholder: "Share your thoughts about this season..." %>
    </div>

    <div class="flex justify-end pt-4">
      <%= form.submit submit_text, class: "rounded-button" %>
    </div>
  <% end %>
</div>
