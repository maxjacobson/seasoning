<% content_for :title, "#{@show.title} - #{@season.name}" %>

<p class="mb-6"><%= link_to "← Back", show_path(@show.slug) %></p>

<div class="bg-white rounded-lg shadow-md p-6 max-w-4xl mx-auto">
  <div class="flex items-start gap-6 mb-6">
    <div class="flex-shrink-0">
      <%= render "poster", url: @season.poster.url, show: @show, size: "small" %>
    </div>

    <div class="flex-1">
      <h1 class="text-2xl font-bold text-gray-900 mb-1"><%= @show.title %></h1>

      <h2 class="text-lg text-gray-600 mb-3"><%= @season.name %></h2>

      <%= render "more_info", url: "https://www.themoviedb.org/tv/#{@show.tmdb_tv_id}/season/#{@season.season_number}" %>
    </div>
  </div>

  <div class="space-y-8">
    <div>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-medium text-gray-900">Episodes</h2>

        <% if current_human.present? && @my_season %>
          <%= form_with url: season_skipping_path(@show.slug, @season.slug),
                        method: @my_season.skipped? ? :delete : :post,
                        class: "flex items-center gap-2" do |f| %>
            <%= f.check_box :skipped,
                            checked: @my_season.skipped?,
                            class: "rounded border-gray-300 text-orange-500 focus:ring-orange-500",
                            onchange: "this.form.requestSubmit()" %>

            <%= f.label :skipped, "Skip this season", class: "text-sm text-gray-700" %>
          <% end %>
        <% end %>
      </div>

      <% if current_human.present? && @my_season && !@my_season.skipped? %>
        <% percentage = @my_season.watched_percentage %>
        <div class="max-w-full sm:max-w-md mb-6">
          <div class="flex justify-end text-sm text-gray-600 mb-2">
            <span><%= number_to_percentage(percentage, precision: 0) %></span>
          </div>

          <div
            class="w-full bg-gray-200 rounded-full h-3"
            title="Season watch progress"
          >
            <div
              class="bg-orange-500 h-3 rounded-full transition-all duration-300"
              style="width: <%= percentage %>%"
            ></div>
          </div>
        </div>
      <% end %>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-2 px-3 text-sm font-medium text-gray-700">
                Number
              </th>

              <th class="text-left py-2 px-3 text-sm font-medium text-gray-700">
                Name
              </th>

              <th class="text-left py-2 px-3 text-sm font-medium text-gray-700">
                Air date
              </th>

              <% if current_human.present? %>
                <th class="text-left py-2 px-3 text-sm font-medium text-gray-700">
                  Seen?
                </th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% @episodes.each do |episode| %>
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="py-3 px-3 text-sm text-gray-900">
                  <%= episode.episode_number %>
                </td>

                <td class="py-3 px-3 text-sm">
                  <%= link_to episode.name, episode_path(@show.slug, @season.slug, episode.episode_number), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                </td>

                <td class="py-3 px-3 text-sm text-gray-600">
                  <%= render "air_date", episode: episode %>
                </td>

                <% if current_human.present? %>
                  <td class="py-3 px-3 text-sm">
                    <%= form_with url: episode_viewing_path(@show.slug, @season.slug, episode.episode_number),
                                  method: @my_season.episode_watched?(episode.episode_number) ? :delete : :post do |f| %>
                      <%= f.check_box :watched,
                                      checked: @my_season.episode_watched?(episode.episode_number),
                                      disabled: @my_season.skipped?,
                                      class: "rounded border-gray-300 text-orange-500 focus:ring-orange-500 #{'opacity-50 cursor-not-allowed' if @my_season.skipped?}",
                                      onchange: "this.form.requestSubmit()" %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div>
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-medium text-gray-900">Reviews</h2>

        <% if current_human.present? %>
          <%= link_to "Add review", new_season_review_path(@show.slug, @season.slug), class: "rounded-button" %>
        <% end %>
      </div>

      <% if @season_reviews.any? %>
        <div class="space-y-3">
          <% @season_reviews.each do |review| %>
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <span class="font-medium text-gray-900">
                    <%= review.author.handle %>
                  </span>

                  <% if review.rating.present? %>
                    <div class="flex items-center">
                      <span class="text-yellow-500 mr-1">★</span>

                      <span class="text-sm font-medium text-gray-700">
                        <%= review.rating %>/10
                      </span>
                    </div>
                  <% end %>
                </div>

                <%= link_to l(review.created_at.to_date, format: :default), proper_review_path(review), class: "text-sm text-blue-600 hover:text-blue-800 hover:underline" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-600">No reviews yet</p>
      <% end %>
    </div>
  </div>

  <%= render "shows/show_metadata", show: @show %>
  <%= render "seasons/season_metadata", season: @season %>
</div>
