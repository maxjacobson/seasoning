<% content_for :title, "#{@show.title} - #{@season.name}" %>

<p class="mb-6"><%= link_to "â† Back", show_path(@show.slug) %></p>

<div class="bg-white rounded-lg shadow-md p-6 max-w-4xl mx-auto">
  <div class="flex items-start gap-6 mb-6">
    <div class="flex-shrink-0">
      <%= image_tag @season.poster.url, alt: "#{@season.name} poster", class: "w-24 h-auto rounded-md shadow-sm" %>
    </div>

    <div class="flex-1">
      <h1 class="text-2xl font-bold text-gray-900 mb-1"><%= @show.title %></h1>

      <h2 class="text-lg text-gray-600 mb-3"><%= @season.name %></h2>

      <%= render "more_info", url: "https://www.themoviedb.org/tv/#{@show.tmdb_tv_id}/season/#{@season.season_number}" %>
    </div>
  </div>

  <div class="space-y-8">
    <div>
      <h2 class="text-lg font-medium text-gray-900 mb-4">Episodes</h2>

      <% if current_human.present? && @my_season %>
        <% percentage = @my_season.watched_percentage %>
        <div class="max-w-full sm:max-w-md mb-6">
          <div class="flex justify-end text-sm text-gray-600 mb-2">
            <span><%= number_to_percentage(percentage, precision: 0) %></span>
          </div>
          <div
            class="w-full bg-gray-200 rounded-full h-3"
            title="Season watch progress"
          >
            <div
              class="bg-orange-500 h-3 rounded-full transition-all duration-300"
              style="width: <%= percentage %>%"
            ></div>
          </div>
        </div>
      <% end %>

      <div class="overflow-x-auto">
        <table class="w-full border-collapse">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="text-left py-2 px-3 text-sm font-medium text-gray-700">
                Number
              </th>
              <th class="text-left py-2 px-3 text-sm font-medium text-gray-700">
                Name
              </th>
              <th class="text-left py-2 px-3 text-sm font-medium text-gray-700">
                Air date
              </th>
              <% if current_human.present? %>
                <th class="text-left py-2 px-3 text-sm font-medium text-gray-700">
                  Seen?
                </th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @episodes.each do |episode| %>
              <tr class="border-b border-gray-100 hover:bg-gray-50">
                <td class="py-3 px-3 text-sm text-gray-900">
                  <%= episode.episode_number %>
                </td>
                <td class="py-3 px-3 text-sm">
                  <%= link_to episode.name, episode_path(@show.slug, @season.slug, episode.episode_number), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                </td>
                <td class="py-3 px-3 text-sm text-gray-600">
                  <%= render "air_date", episode: episode %>
                </td>
                <% if current_human.present? %>
                  <td class="py-3 px-3 text-sm">
                    <%= form_with url: episode_viewing_path(@show.slug, @season.slug, episode.episode_number),
                                  method: @my_season.episode_watched?(episode.episode_number) ? :delete : :post do |f| %>
                      <%= f.check_box :watched,
                                      checked: @my_season.episode_watched?(episode.episode_number),
                                      class: "rounded border-gray-300 text-orange-500 focus:ring-orange-500",
                                      onchange: "this.form.requestSubmit()" %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <% if current_human.present? %>
      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-4">Your review</h2>
        <div class="bg-gray-50 rounded-lg p-4">
          <% if @my_season.reviews.any? %>
            <ul class="space-y-2 mb-4">
              <% @my_season.reviews.order(created_at: :desc).each do |review| %>
                <li>
                  <%= link_to review.created_at.to_date, proper_review_path(review), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-gray-600 mb-4">No reviews yet</p>
          <% end %>
          <%= link_to "Add review", new_season_review_path(@show.slug, @season.slug), class: "rounded-button" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= render "shows/show_metadata", show: @show %>
</div>
