<%= content_for :title do %>
  Search
<% end %>

<div class="bg-white rounded-lg shadow-md p-6 max-w-4xl mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Search results</h1>

  <% if @database_results.present? %>
    <div class="space-y-4">
      <% @database_results.each do |show| %>
        <%= render "database_show_result", show: show %>
      <% end %>
    </div>
    <div class="mt-6 pt-6 border-t border-gray-200 text-center">
      <p class="text-sm text-gray-600 mb-3">
        Not seeing what you're looking for?
      </p>

      <%= link_to "Include results from TMDB", search_path(q: @query, tmdb: 1), class: "inline-block px-4 py-2 bg-orange-100 text-orange-700 rounded hover:bg-orange-200 transition-colors" %>
    </div>
  <% elsif @tmdb_results.present? %>
    <div class="space-y-4">
      <% @tmdb_results.each do |result| %>
        <%= render "tmdb_show_result", result: result %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">No results. Try searching something else.</p>
  <% end %>
</div>
