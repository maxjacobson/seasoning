<%# locals: (show:) %>

<%= link_to show_path(show.slug), data: { test_id: "imported-show-#{show.tmdb_tv_id}" }, class: "block no-underline" do %>
  <div
    class="
      rounded-md border border-gray-200 p-4 hover:border-gray-400
      hover:bg-orange-50 transition-colors cursor-pointer
    "
  >
    <div class="flex items-start gap-4">
      <div class="flex-shrink-0">
        <%= image_tag Poster.new(show.tmdb_poster_path).url, class: "w-16 h-auto rounded shadow-sm" %>
      </div>

      <div class="flex-1 min-w-0">
        <div class="font-medium text-gray-900">
          <%= show.title %>

          <% if show.first_air_date.present? %>
            <span class="text-gray-500">(<%= show.first_air_date.year %>)</span>
          <% end %>
        </div>

        <div class="text-sm text-gray-500 mt-1">
          Added by <%= pluralize(show.watchers_count, "person", "people") %>
        </div>
      </div>

      <div class="text-gray-400 mt-1">
        â†’
      </div>
    </div>
  </div>
<% end %>
