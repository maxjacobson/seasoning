<%= content_for :title do %>
  <%= @page.title %>
<% end %>

<div class="bg-white rounded-lg shadow-md p-6 max-w-4xl mx-auto">
  <div class="flex flex-col sm:flex-row items-start gap-6 mb-6">
    <div class="flex-shrink-0 self-center sm:self-start">
      <%= render "poster", size: "large", url: @page.show.poster.url, show: @page.show %>
    </div>

    <div class="flex-1">
      <h1 class="text-2xl font-bold text-gray-900 mb-3"><%= @page.title %></h1>

      <%= render "more_info", url: @page.tmdb_url %>

      <div class="mt-4 space-y-4">
        <% if current_human %>
          <div>
            <%= render "add_or_remove_show", show: @page.show, my_show: @page.my_show %>
          </div>
        <% end %>

        <% if @page.added? %>
          <div class="space-y-4">
            <%= render "choose_show_status_button", my_show: @page.my_show %>
            <div class="max-w-full sm:max-w-md">
              <div class="flex justify-end text-sm text-gray-600 mb-2">
                <span><%= number_to_percentage(@page.watched_percentage, precision: 0, round_mode: :down) %></span>
              </div>
              <div
                class="w-full bg-gray-200 rounded-full h-3"
                title="Watch progress"
              >
                <div
                  class="bg-orange-500 h-3 rounded-full transition-all duration-300"
                  style="width: <%= @page.watched_percentage %>%"
                ></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="space-y-8">
    <% if @page.added? %>
      <div><%= render "note_to_self", my_show: @page.my_show %></div>
    <% end %>

    <% if @page.seasons? %>
      <div>
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-medium text-gray-900">Seasons</h2>
          <% if @page.skipped_seasons? %>
            <%= form_with url: show_path(@page.slug), method: :get, class: "flex items-center gap-2" do |f| %>
              <%= check_box_tag :include_skipped, "1", @page.include_skipped, onchange: "this.form.requestSubmit()", class: "rounded border-gray-300 text-orange-500 focus:ring-orange-500" %>
              <%= f.label :include_skipped, "Show skipped seasons", class: "text-sm text-gray-700" %>
            <% end %>
          <% end %>
        </div>
        <%= render "seasons_list", show: @page.show, seasons: @page.seasons %>
      </div>
    <% else %>
      <div class="text-gray-600">No seasons...</div>
    <% end %>
  </div>

  <%= render "show_metadata", show: @page.show %>
</div>
