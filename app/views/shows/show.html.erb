<%= content_for :title do %>
  <%= @show.title %>
<% end %>

<div class="bg-white rounded-lg shadow-md p-6 max-w-4xl mx-auto">
  <div class="flex flex-col sm:flex-row items-start gap-6 mb-6">
    <div class="flex-shrink-0 self-center sm:self-start">
      <%= render "poster", size: "large", url: @show.poster.url, show: @show %>
    </div>

    <div class="flex-1">
      <h1 class="text-2xl font-bold text-gray-900 mb-3"><%= @show.title %></h1>

      <%= render "more_info", url: "https://www.themoviedb.org/tv/#{@show.tmdb_tv_id}" %>

      <div class="mt-4 space-y-4">
        <% if current_human %>
          <div>
            <%= render "add_or_remove_show", show: @show, my_show: @my_show %>
          </div>
        <% end %>

        <% if @my_show %>
          <div class="space-y-4">
            <%= render "choose_show_status_button", my_show: @my_show %>
            <% percentage = @my_show.watched_percentage %>
            <div class="max-w-full sm:max-w-md">
              <div class="flex justify-end text-sm text-gray-600 mb-2">
                <span><%= number_to_percentage(percentage, precision: 0, round_mode: :down) %></span>
              </div>
              <div
                class="w-full bg-gray-200 rounded-full h-3"
                title="Watch progress"
              >
                <div
                  class="bg-orange-500 h-3 rounded-full transition-all duration-300"
                  style="width: <%= percentage %>%"
                ></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="space-y-8">
    <% if @my_show %>
      <div><%= render "note_to_self", my_show: @my_show %></div>
    <% end %>

    <% if @show.seasons.length > 0 %>
      <div>
        <h2 class="text-lg font-medium text-gray-900 mb-4">Seasons</h2>
        <%= render "seasons_list", show: @show %>
      </div>
    <% else %>
      <div class="text-gray-600">No seasons...</div>
    <% end %>
  </div>

  <%= render "show_metadata", show: @show %>
</div>
