<% if @my_shows.any? %>
  <div class="mx-0 my-2 flex flex-wrap gap-4">
    <% @my_shows.each do |my_show| %>
      <div class="w-60 rounded-lg border-2 border-dashed border-yellow-500 p-2">
        <div class="flex flex-col">
          <div class="self-center">
            <%= link_to show_path(my_show.show) do %>
              <div>
                <%= render "poster", show: my_show.show, size: "large" %>
                <%= my_show.show.title %>
              </div>
            <% end %>
          </div>

          <div class="self-center">
            <% if my_show.status %>
              <span><%= my_show_status(my_show) %></span>
            <% else %>
              <span>&mdash</span>
            <% end %>

            <% if my_show.note_to_self %>
              <div class="mx-0 my-2.5 break-words border-t border-dotted border-slate-300 p-0.5">
                <h2 class="text-lg font-bold">Note to self</h2>
                  <%= render "markdown", content: my_show.note_to_self %>
                </div>
            <% end %>
          <% end %>
          </div>
        <% else %>

    <div>No shows yet. Maybe add some via the search at the top of the page?</div>
<% end %>
