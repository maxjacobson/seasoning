<%# locals: (show:, seasons:) %>

<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
  <% seasons.each do |season| %>
    <% badge = current_human ? season.unwatched_episode_badge_for(current_human) : EpisodeBadge.new(0, 0) %>

    <div class="flex flex-col">
      <%= link_to season_path(show.slug, season.slug), class: "block no-underline cursor-pointer flex-shrink-0 mb-2" do %>
        <%= render "poster", url: season.poster.url, show: show, size: "full", badge: badge %>
      <% end %>

      <div class="flex-1">
        <%= link_to season_path(show.slug, season.slug), class: "text-sm font-medium text-gray-900 hover:text-orange-600 no-underline" do %>
          <%= season.name %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
