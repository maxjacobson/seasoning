<%= content_for :title do %>
  <%= @profile.handle %>&rsquo;s reviews
<% end %>

<h1 class="text-2xl"><%= @profile.handle %>&rsquo;s reviews</h1>
<% if @reviews.any? %>
  <% @reviews.each do |review| %>
    <div class="mb-6 rounded-lg border border-gray-200 p-4">
      <div class="flex gap-4">
        <div class="flex-shrink-0">
          <%= render "poster", url: review.season.poster.url, show: review.season.show, size: "small" %>
        </div>
        <div class="flex-1">
          <h2 class="text-lg font-semibold mb-1">
            <%= link_to "#{review.season.show.title} â€” #{review.season.name}", proper_review_path(review), class: "hover:underline" %>
          </h2>
          <div class="text-sm text-gray-600 mb-2">
            <%= l(review.created_at.to_date, format: :default) %>
            <% if review.viewable_by_only_me? %>
              <span title="Private review - only you can see this">ðŸ”’</span>
            <% end %>
          </div>
          <div class="mb-3">
            <% if review.rating %>
              <%= render "star_rating", rating: review.rating %>
            <% else %>
              <span class="text-gray-500">No rating</span>
            <% end %>
          </div>
          <div>
            <%= link_to "Read full review", proper_review_path(review), class: "rounded-button" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if @has_previous_page || @has_next_page %>
    <div class="mt-4 flex justify-between items-center">
      <div>
        <% if @has_previous_page %>
          <%= link_to "â† Previous", url_for(page: @page - 1), class: "rounded-button" %>
        <% end %>
      </div>

      <div>
        Page <%= @page %>
      </div>

      <div>
        <% if @has_next_page %>
          <%= link_to "Next â†’", url_for(page: @page + 1), class: "rounded-button" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>No reviews yet!</p>
<% end %>
