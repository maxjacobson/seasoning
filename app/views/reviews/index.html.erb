<%= content_for :title do %>
  <%= @profile.handle %> &rsquo;s reviews
<% end %>

<div class="bg-white rounded-lg shadow-md p-6 max-w-4xl mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">
    <%= @profile.handle %>&rsquo;s reviews
  </h1>

  <% if @reviews.any? %>
    <div class="space-y-6">
      <% @reviews.each do |review| %>
        <div class="rounded-lg border border-gray-200 p-4">
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <%= render "poster", url: review.season.poster.url, show: review.season.show, size: "small" %>
            </div>

            <div class="flex-1">
              <h2 class="text-lg font-semibold mb-1">
                <%= link_to "#{review.season.show.title} â€” #{review.season.name}", proper_review_path(review), class: "text-blue-600 hover:text-blue-800 hover:underline" %>
              </h2>

              <div class="text-sm text-gray-600 mb-2">
                <%= l(review.created_at.to_date, format: :default) %>

                <% if review.viewable_by_only_me? %>
                  <span title="Private review - only you can see this">ðŸ”’</span>
                <% end %>
              </div>

              <div class="mb-3">
                <% if review.rating %>
                  <%= render "star_rating", rating: review.rating %>
                <% else %>
                  <span class="text-gray-500">No rating</span>
                <% end %>
              </div>

              <div>
                <%= link_to "Read full review", proper_review_path(review), class: "rounded-button" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% if @has_previous_page || @has_next_page %>
      <div class="mt-8 flex justify-between items-center">
        <div>
          <% if @has_previous_page %>
            <%= link_to "â† Previous", url_for(page: @page - 1) %>
          <% end %>
        </div>

        <div class="text-gray-600">Page <%= @page %></div>

        <div>
          <% if @has_next_page %>
            <%= link_to "Next â†’", url_for(page: @page + 1) %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-600">No reviews yet!</p>
  <% end %>
</div>
