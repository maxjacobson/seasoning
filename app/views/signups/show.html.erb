<h1 class="text-2xl mb-6">Sign up</h1>

<p class="text-sm text-gray-600 mb-6">
  We'll send you an email with a link to complete your sign up.
</p>

<div data-test-id="signup-form">
  <%= form_with model: @magic_link, url: signup_path do |f| %>
    <% if @magic_link&.errors&.any? %>
      <div class="mb-4">
        <% @magic_link.errors.full_messages.each do |error| %>
          <div class="text-red-600"><%= error %></div>
        <% end %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email, "Email", class: "block mb-2" %>
      <%= f.text_field :email, placeholder: "email", class: "text-field", autocomplete: "email" %>
    </div>

    <div class="flex items-center gap-4">
      <%= f.submit "Send magic link", class: "rounded-button" %>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <p class="text-sm text-gray-600">
    Already have an account?
    <%= link_to "Sign in", login_path, class: "text-orange-500 hover:text-orange-600" %>
  </p>
</div>
