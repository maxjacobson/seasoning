<%# locals: (url:, size:, show:, badge: nil) %>

<% if url %>
  <% width_class = case size
                   when "extra-small" then "w-16"
                   when "small" then "w-24"
                   when "medium" then "w-20"
                   when "full" then "w-full"
                   else "w-48"
                   end %>
  <div class="relative inline-block">
    <%= image_tag(
        url,
        alt: "#{show.title} poster",
        class: "#{width_class} h-auto rounded shadow-sm block"
      ) %>

    <% if badge %>
      <%= render "episode_badge", badge: badge %>
    <% end %>
  </div>
<% end %>
